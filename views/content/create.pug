extends ../layout

block content
    .pb-2.mt-2.mb-4.border-bottom
        h3 Create New Text Post

    form(action='/content/create', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='title') Title
            .col-md-8
                textarea.form-control(name='title', id='title', rows='1', required)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='content') Content
            .col-md-8
                textarea.form-control(name='content', id='content', rows='7', required)
        .form-group.row
            label(class='col-md-2 col-form-label font-weight-bold', for='price') Price (sats)
            .col-md-8
                input.form-control(type='number', name='price', id='price', required)
        .form-group
            .offset-md-2.col-md-8.p-1
                button.btn.btn-primary(type='submit')
                    |Post
    h5.small Hint: HTML is supported
